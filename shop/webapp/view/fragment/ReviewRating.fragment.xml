		<content>
			<l:VerticalLayout id="reviewRatingList">
				<shop:RatingAndCount enabled="false" iconSize="1rem" id="ratingAndCountList" maxRatingValue="5" ratingCount="{RatingCount}" value="{Rating}"
					verticalAlignContent="true"/>
			</l:VerticalLayout>
		</content>
	</Popover>
</core:FragmentDefinition>