<core:FragmentDefinition xmlns:core="sap.ui.core" xmlns="sap.m">
	<QuickView id="companyQuickView">
		<QuickViewPage description="{FormattedContactName}" header="{i18n>xtit.supplier}" icon="sap-icon://account" title="{Name}">
			<QuickViewGroup heading="{i18n>xtit.contactDetails}">
				<QuickViewGroupElement label="{/#Supplier/Phone/@sap:label}" type="phone" value="{Phone}"/>
				<QuickViewGroupElement label="{/#Supplier/FormattedAddress/@sap:label}" value="{FormattedAddress}"/>
			</QuickViewGroup>
			<QuickViewGroup heading="{i18n>xtit.mainContact}">
				<QuickViewGroupElement label="{/#Supplier/FormattedContactName/@sap:label}" value="{FormattedContactName}"/>
				<QuickViewGroupElement label="{/#Supplier/ContactPhone2/@sap:label}" type="mobile" value="{ContactPhone2}"/>
				<QuickViewGroupElement label="{/#Supplier/ContactPhone1/@sap:label}" type="phone" value="{ContactPhone1}"/>
				<QuickViewGroupElement label="{/#Supplier/ContactEmail/@sap:label}" type="email" value="{ContactEmail}"/>
			</QuickViewGroup>
		</QuickViewPage>
	</QuickView>
</core:FragmentDefinition>