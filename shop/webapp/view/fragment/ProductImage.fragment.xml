<core:FragmentDefinition xmlns:core="sap.ui.core" xmlns:l="sap.ui.layout" xmlns="sap.m">
	<Dialog id="imageDialog" title="{Name}">
		<content>
			<Image densityAware="false" id="prodcutImage" src="{ImageUrl}" width="{= !${device>/system/phone}? '25rem' : '15rem'}"/>
		</content>
		<beginButton>
			<Button id="btnCloseDialog" press="onImageOKPressed" text="{i18n>xbut.ok}"/>
		</beginButton>
	</Dialog>
</core:FragmentDefinition>